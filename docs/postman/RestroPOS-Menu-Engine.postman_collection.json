          "request": {"method": "POST", "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}, {"key": "Content-Type", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n  \"outletId\": {{outletId}},\n  \"name\": \"Liquor\",\n  \"description\": \"Alcoholic beverages - Bar only\",\n  \"imageUrl\": \"https://example.com/images/liquor.jpg\",\n  \"displayOrder\": 10,\n  \"isGlobal\": false,\n  \"floorIds\": [{{barFloorId}}],\n  \"sectionIds\": [{{barSectionId}}]\n}"}, "url": "{{baseUrl}}/menu/categories"}
