          "request": {"method": "POST", "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}, {"key": "Content-Type", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n  \"outletId\": {{outletId}},\n  \"name\": \"Bar Station\",\n  \"code\": \"BAR\",\n  \"description\": \"Bar for drinks and cocktails\"\n}"}, "url": "{{baseUrl}}/tax/kitchen-stations"}
