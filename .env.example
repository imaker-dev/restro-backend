# Application
NODE_ENV=development
PORT=3000
APP_NAME=RestroPOS
APP_URL=http://localhost:3000

# Database - MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=restro_pos
DB_USER=root
DB_PASSWORD=
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_LIMIT=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# WebSocket
WS_PORT=3001
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# BullMQ Queues
QUEUE_PREFIX=restro-pos

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Print Service
PRINT_SERVICE_URL=http://localhost:9100

# Cron Jobs
ENABLE_CRON_JOBS=true
REPORT_AGGREGATION_INTERVAL=*/5 * * * *

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
